{
  "name": "vite-js-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --open",
    "qa": "vite --mode test",
    "prod": "vite --mode production",
    "dev-build": "vite build --mode dev",
    "qa-build": "vite build --mode test",
    "prod-build": "vite build",
    "preview": "vite preview",
    "commit": "npx cz",
    "fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "eslint --fix",
    "prettier": "npx prettier --write .",
    "style": "stylelint \"src/**/*.(css)\" --fix",
    "prepare": "husky install",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "ant-design-vue": "^3.2.15",
    "pinia": "^2.0.30",
    "pinia-plugin-persistedstate": "^3.1.0",
    "sass": "^1.58.3",
    "vue": "^3.2.45",
    "vue-router": "4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vue/test-utils": "^2.3.0",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "happy-dom": "^8.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "unplugin-vue-components": "^0.24.0",
    "vite": "^4.1.0",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vitest": "^0.28.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx,vue}": [
      "npm run lint:fix",
      "prettier --write"
    ],
    "src/**/*.{css,less,scss}": [
      "prettier --write"
    ],
    "src/**/*.{md,json}": [
      "prettier --write"
    ]
  }
}
